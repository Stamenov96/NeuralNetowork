							else{
							    Toast unsavedToast = Toast.makeText(getApplicationContext(), 
							        "Oops! Image could not be saved.", Toast.LENGTH_SHORT);
							    unsavedToast.show();
							}
						
							drawView.destroyDrawingCache();	
